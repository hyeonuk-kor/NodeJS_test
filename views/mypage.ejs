		<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
		<script>
			$(".delete").click(function (e) {
				var 글번호 = e.target.dataset.id; //e.target 내가 누른 요소
				var 지금누른거 = $(this); // 지금 이벤트 동작하는 곳
				console.log(지금누른거);
				$.ajax({
					method: "DELETE",
					url: "/delete",
					data: { _id: 글번호 },
				})
					.done(function (결과) {
						//1. 페이지 강제 새로고침 // locateion reload
						// 삭제버튼을 누른 <li> 요소 제거/안보이게
						console.log("t삭제성공");
						console.log(지금누른거.parent);
						지금누른거.parent("li").fadeOut();
					})
					.fail(function (xhr, textStatus, errorThrown) {
						console.log(xhr, textStatus, errorThrown);
					});
			});
		</script>
